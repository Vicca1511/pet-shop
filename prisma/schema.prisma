generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @unique
  treatmentId String

  name             String
  email            String    @unique
  cpf              String    @unique
  petName          String
  password         String
  role             String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  Services         Service[]
  serciceId        String?
  treatmentOwnerId String?
  Treatment        Treatment @relation(fields: [treatmentId], references: [id])

  treatmentPetId String?
}

model Service {
  id          String      @id
  treatmentId String
  ownerPet    User[]
  startDate   DateTime
  endDate     DateTime
  moment      String
  Treatments  Treatment[]
}

